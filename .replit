modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glib", "gtk3", "libdrm", "xorg.libXScrnSaver", "alsa-lib", "xorg.libXtst", "xorg.libXrandr", "pango", "atk", "cairo", "gdk-pixbuf", "nss", "at-spi2-atk", "at-spi2-core", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXfixes", "mesa", "libgbm", "wayland", "libxkbcommon"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Electron Browser"

[[workflows.workflow]]
name = "Electron Browser"
author = "agent"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx electron . --no-sandbox --disable-dev-shm-usage"
